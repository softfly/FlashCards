<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- These are the standard attributes that make up a complete theme. -->
    <declare-styleable name="Theme">
        <attr name="colorIcon" format="color" />

        <attr name="behindWindowBackground" format="color" />
        <attr name="cardBorder" format="color" />

        <!-- Study Card -->
        <attr name="colorListDivider" format="color" />
        <attr name="opacityListDivider" format="color" />

        <!-- Show last synced -->
        <attr name="colorItemRecentlyAddedCard" format="color" />
        <attr name="colorItemRecentlyUpdatedCard" format="color" />
        <attr name="colorItemRecentlyAddedFileCard" format="color" />
        <attr name="colorItemRecentlyUpdatedFileCard" format="color" />
        <attr name="colorItemSelected" format="color" />
        <attr name="colorItemActive" format="color" />

    </declare-styleable>
</resources>