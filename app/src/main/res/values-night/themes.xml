<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.FlashCards" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/grey_1000</item>
        <item name="colorPrimaryVariant">?attr/colorPrimary</item>
        <item name="colorPrimaryDark">?attr/colorPrimary</item><!-- Notification bar color. -->
        <item name="colorOnPrimary">@color/grey_400</item>

        <item name="colorIcon">@android:color/white</item>
        <item name="android:windowBackground">@android:color/black</item>

        <!-- Study Card -->
        <item name="colorListDivider">@color/grey_900</item>
        <item name="opacityListDivider">@color/opacity_80</item>
        <item name="behindWindowBackground">?attr/colorPrimary</item>
        <item name="cardBorder">?attr/colorListDivider</item>

        <!-- Show last synced -->
        <item name="colorItemRecentlyAddedCard">@color/green_800</item>
        <item name="colorItemRecentlyUpdatedCard">@color/orange_900</item>
        <item name="colorItemRecentlyAddedFileCard">@color/green_700</item>
        <item name="colorItemRecentlyUpdatedFileCard">@color/orange_800</item>
        <item name="colorItemSelected">@color/deep_purple_700</item>
        <item name="colorItemActive">@color/deep_purple_900</item>

        <!-- AlertDialog - Positive and Negative buttons are white.  -->
        <item name="alertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>

        <item name="actionBarStyle">@style/AppBarDarkStyle</item>
        <!-- The active icon is white instead of black -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <style name="AppBarDarkStyle" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">?attr/colorPrimary</item>
    </style>

    <!-- BEGIN MaterialAlertDialog -->
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button.TextButton.Dialog</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button.TextButton.Dialog</item>
    </style>

    <style name="Widget.App.Button.TextButton.Dialog" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MyApp.Button.TextButton.Dialog</item>
    </style>

    <style name="ThemeOverlay.MyApp.Button.TextButton.Dialog" parent="">
        <item name="colorPrimary">@android:color/white</item>
    </style>
    <!-- END MaterialAlertDialog -->

    <!-- BEGIN BottomNavigationView -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@android:color/white</item>
    </style>
    <!-- END BottomNavigationView -->

</resources>