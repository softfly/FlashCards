<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.softfly.flashcards">

    <uses-permission
        android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        android:minSdkVersion="30" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FlashCards">
        <activity android:name=".ui.card.ListCardsActivity"></activity>
        <activity android:name=".ui.deck.DeckListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.card.CardActivity"
            android:parentActivityName=".ui.deck.DeckListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.deck.DeckListActivity" />
        </activity>
        <activity
            android:name=".ui.card.NewCardActivity"
            android:parentActivityName=".ui.deck.DeckListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.deck.DeckListActivity" />
        </activity>
    </application>

</manifest>